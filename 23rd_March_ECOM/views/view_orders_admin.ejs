<!DOCTYPE html>
<html>
  <head>
    <title>View Order Page</title>
    <style>
      /* Internal CSS stylesheet */
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th, td {
        text-align: left;
        padding: 8px;
        border-bottom: 1px solid #ddd;
      }

      tr:hover {
        background-color: #f5f5f5;
      }

      th {
        background-color: #4CAF50;
        color: white;
      }
    </style>
  </head>
  <body>
    <h1>View Order Page</h1>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Product Name</th>
          <th>Link</th>
          <th>Username</th>
          <th>Order ID</th>
          <th>Address</th>
          <th>Status</th>
          <th>Tracking ID</th>
          <th>Mode</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach((result)=>{ %>
          <tr>
            <td><%=result.id%></td>
            <td><%=result.name%></td>
            <td><a href="/details/<%=result.p_id%>">Link</a></td>
            <td><%=result.usr_buy%></td>
            <td><%=result.o_id%></td>
            <td><%=result.addr%></td>
            <td>
            <%if(result.tracking== 0){%>
            <a href="/changestaAccept/<%=result.id%>"><button>Accept</button></a>
			<a href="/changestaDecline/<%=result.id%>">
			<button>Decline</button></a>
            <%}%>
            <%if(result.tracking==1){%>
            Confirmed
			<form action="/addT_id" method="post">
			<input type="hidden" name="oid" value="<%=result.id%>">
			<input type="text" name="tid" value="">
			<button type="submit">Add Tracking Details</button>
			</form>
            <%}%>
            <%if(result.tracking==2){%>
            Shipped
			<a href="/changestaDelivered/<%=result.id%>">
			<button>Mark Deliverd</button></a>
            <%}%>
            <%if(result.tracking==3){%>
            Deliverd
            <%}%>
            <%if(result.tracking==4){%>
            Cancelled
            <%}%>
          </td>
            <td><%=result.tracking_id%></td>
            <td><%if(result.mode==0){%>
            Pre-Paid
            <%}%>
            <%if(result.mode==1){%>
            Post-Paid
            <%}%>
          </td>
          </tr>
          <%})%>
        </tbody>
        </body>
        </html>
